generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  password     String
  role         String
  phone        String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  refreshToken String?
  Provider     Provider?
}

model Provider {
  id           String     @id @default(uuid())
  userId       String     @unique
  businessName String
  description  String?
  address      String?
  photoUrl     String?
  active       Boolean    @default(false)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  linkCode     String     @unique
  website      String?
  currency     String     @default("XOF")
  customers    Customer[]
  user         User       @relation(fields: [userId], references: [id])
  service      Service?
}

model Customer {
  id          String   @id @default(cuid())
  firstname   String
  lastname    String
  phoneNumber String
  providerId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  provider    Provider @relation(fields: [providerId], references: [id])

  @@index([providerId])
}

model ServiceOption {
  id        String   @id @default(uuid())
  name      String
  price     Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  serviceId String
  service   Service  @relation("ServiceOptions", fields: [serviceId], references: [id])
}

model Schedule {
  id        String   @id @default(uuid())
  serviceId String
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isBooked  Boolean  @default(false)
  service   Service  @relation(fields: [serviceId], references: [id])

  @@unique([serviceId, startTime, endTime])
}

model Service {
  id          String          @id @default(uuid())
  providerId  String          @unique
  name        String
  description String?
  duration    Int
  price       Decimal
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  schedulers  Schedule[]
  provider    Provider        @relation(fields: [providerId], references: [id])
  options     ServiceOption[] @relation("ServiceOptions")
}
